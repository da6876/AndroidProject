<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#FFECEC"
    tools:context=".LogInOption">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="#858585"
            android:textAlignment="center"
            android:padding="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Connect With"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp" />
        <com.google.android.gms.common.SignInButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:id="@+id/btn_google_sing_in"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_phone_sing_in"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="65dp"
            android:text="Phone"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/tv_alreadyAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already Have Account? Then Login Here"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:padding="10dp"/>
    </LinearLayout>

</LinearLayout>
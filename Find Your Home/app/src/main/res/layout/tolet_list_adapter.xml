<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    style="@style/CardView.Light">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_toletImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/dummy_house"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_tolet_name"
                android:text="Tolet name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tv_avalable_date"
                android:text="Avalable Date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:gravity="right"
                android:textSize="15dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_tolet_type"
            android:text="Tolet Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2E2727"
            android:padding="8dp"
            android:layout_weight="0.15"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/tv_tolet_details"
            android:text="Tolet Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_line"
            android:textColor="#2E2B2B"
            android:padding="8dp"
            android:layout_weight="0.15"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/tv_address"
            android:text="Address"
            android:padding="8dp"
            android:drawableLeft="@drawable/ic_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#303030"
            android:layout_weight="0.15"
            android:textSize="14dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_Bath"
                android:text="Bath"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tv_Beds"
                android:text="Beds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:gravity="left"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/tv_Floors"
                android:text="Floors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:gravity="left"
                android:textSize="16dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>